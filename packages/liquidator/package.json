{
  "name": "liquidator",
  "version": "0.1.0",
  "description": "DeFi liquidation infrastructure for monitoring prices and liquidating undercollateralized positions",
  "private": true,
  "workspaces": [
    "services/*",
    "shared"
  ],
  "scripts": {
    "dev:price": "bun --watch services/price-service/src/index.ts",
    "dev:sentinel": "bun --watch services/liquidation-sentinel/src/index.ts",
    "dev:all": "concurrently \"bun run dev:price\" \"bun run dev:sentinel\"",
    "build": "bun run build:shared && bun run build:services",
    "build:shared": "cd shared && bun build",
    "build:services": "cd services/price-service && bun build && cd ../liquidation-sentinel && bun build",
    "set-zec-price": "bun scripts/set-zec-price.ts",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"**/*.{ts,json,md}\""
  },
  "dependencies": {
    "dotenv": "^16.4.5"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "concurrently": "^9.2.1",
    "eslint": "^9.17.0",
    "prettier": "^3.4.2",
    "typescript": "^5.7.2"
  }
}
