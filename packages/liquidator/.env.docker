# Docker Environment Configuration
# Copy this file to .env for docker-compose

# ======================
# Price Service
# ======================
CMC_API_KEY=your_coinmarketcap_api_key_here
PRICE_UPDATE_INTERVAL=60000
PRICE_CHANGE_THRESHOLD=0.5
MAX_UPDATE_INTERVAL=1800000
MAX_TRACKED_ASSETS=50
ORACLE_CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000

# ======================
# Note Monitor
# ======================
NOTE_MONITOR_PXE_URL=http://localhost:8080
SYNC_INTERVAL=60000

# ======================
# Liquidation Engine
# ======================
LIQUIDATION_ENGINE_PXE_URL=http://localhost:8080
LIQUIDATOR_PRIVATE_KEY=your_private_key_here

# ======================
# Shared Configuration
# ======================
# IMPORTANT: Generate a secure 32+ character random string for production
LIQUIDATION_API_KEY=generate_a_secure_32_char_key_here

# Logging
LOG_LEVEL=info
