# Liquidator Service Configuration
# Copy this file to .env and fill in your values

# ======================
# Aztec Node
# ======================
# For local dev: http://host.docker.internal:8080
# For cloud: https://your-aztec-node.example.com
AZTEC_NODE_URL=http://localhost:8080

# ======================
# Price Service
# ======================
# Get from https://www.coingecko.com/en/api
COINGECKO_API_KEY=your_coingecko_api_key_here

# Price update interval in milliseconds (default: 60s)
PRICE_UPDATE_INTERVAL=60000

# Price change threshold percentage to trigger on-chain update (default: 0.5%)
PRICE_CHANGE_THRESHOLD=0.5

# Maximum time without update in milliseconds (default: 30 minutes)
MAX_UPDATE_INTERVAL=1800000

# Maximum number of assets to track (default: 50)
MAX_TRACKED_ASSETS=50

# ======================
# Position Sync
# ======================
# How often to sync escrow positions in milliseconds (default: 60s)
SYNC_INTERVAL=60000

# ======================
# Phala TEE
# ======================
# Get from https://cloud.phala.network
PHALA_API_KEY=your_phala_api_key_here

# ======================
# Liquidator API URL (for scripts)
# ======================
# URL for health checks and admin scripts
LIQUIDATOR_URL=http://localhost:9000

# ======================
# Logging
# ======================
# Options: trace, debug, info, warn, error, fatal
LOG_LEVEL=info
