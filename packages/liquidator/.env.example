# ==============================================================================
# PRICE SERVICE CONFIGURATION
# ==============================================================================

# CoinGecko API Key (get from https://www.coingecko.com/en/api)
COINGECKO_API_KEY=your_coingecko_api_key_here

# Price update interval in milliseconds (default: 60000ms = 60 seconds)
PRICE_UPDATE_INTERVAL=60000

# Price change threshold percentage to trigger update (default: 0.5%)
PRICE_CHANGE_THRESHOLD=0.5

# Maximum time without update in milliseconds (default: 1800000ms = 30 minutes)
MAX_UPDATE_INTERVAL=1800000

# Maximum number of assets to track (default: 50)
MAX_TRACKED_ASSETS=50

# Price oracle contract address (mock during Phase 1-7)
CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000

# Liquidation engine URL for notifications
LIQUIDATION_ENGINE_URL=http://localhost:3002

# Shared secret API key for price service â†’ liquidation engine authentication
LIQUIDATION_API_KEY=generate_a_secure_32_char_key_here

# Public API port for price service
PUBLIC_API_PORT=3000

# ==============================================================================
# NOTE MONITOR SERVICE CONFIGURATION
# ==============================================================================

# PXE service URL (mock during Phase 1-7)
NOTE_MONITOR_PXE_URL=http://localhost:8080

# State sync interval in milliseconds (default: 60000ms = 1 minute)
SYNC_INTERVAL=60000

# API port for note monitor service
NOTE_MONITOR_API_PORT=3001

# Optional: Database connection URL (if using external DB)
# DATABASE_URL=postgresql://user:password@localhost:5432/liquidator

# ==============================================================================
# LIQUIDATION ENGINE CONFIGURATION
# ==============================================================================

# PXE service URL (mock during Phase 1-7)
LIQUIDATION_ENGINE_PXE_URL=http://localhost:8080

# Price service URL for querying prices
PRICE_SERVICE_URL=http://localhost:3000

# Note monitor URL for querying positions
NOTE_MONITOR_URL=http://localhost:3001

# API key for authenticating with price service (same as LIQUIDATION_API_KEY above)
LIQUIDATION_ENGINE_API_KEY=generate_a_secure_32_char_key_here

# Liquidator's private key for signing transactions (KEEP THIS SECRET!)
LIQUIDATOR_PRIVATE_KEY=your_private_key_here

# API port for liquidation engine
LIQUIDATION_ENGINE_API_PORT=3002

# ==============================================================================
# SHARED CONFIGURATION
# ==============================================================================

# Environment (development, production, test)
NODE_ENV=development

# Log level (trace, debug, info, warn, error, fatal)
LOG_LEVEL=info
